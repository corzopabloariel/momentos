<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@drawable/service_element">

    <TextView
        android:id="@+id/inputTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/image"
        android:hint="TÃ­tulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <TextView
        android:id="@+id/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputDate"
        android:layout_below="@+id/inputTitle"
        android:layout_toLeftOf="@+id/image"
        android:layout_alignLeft="@+id/inputTitle"
        android:layout_alignRight="@+id/inputTitle"
        android:text="Resumen" />

    <TextView
        android:id="@+id/inputDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputText"
        android:layout_alignRight="@+id/inputTitle"
        android:layout_alignParentBottom="true"
        android:text="Fecha"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <TextView
        android:id="@+id/inputLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputDate"
        android:layout_alignLeft="@+id/inputDate"
        android:layout_alignEnd="@id/inputDate"
        android:layout_alignRight="@id/inputTitle"
        android:layout_alignBottom="@id/inputDate"
        android:layout_alignParentBottom="true"
        android:text="Ubicacion"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true" />
</RelativeLayout>